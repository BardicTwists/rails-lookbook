<%= render_component_tag tag_name,
  href: @href,
  class: [
    "bg-white text-lookbook-button-text #{padding}",
    {
      "hover:text-lookbook-button-text-hover": !@disabled,
      "cursor-[not-allowed] opacity-50": @disabled
    }
  ],
  disabled: @disabled do %>
  <span x-ref="icon">
    <% if icon %>
      <%= icon %>
    <% else %>
      <%= render_component :icon, @icon, size: icon_size, ":class": "{'animate-spin': _spinning}" %>
    <% end %>
  </span>
  <% if @tooltip %>
    <label class="hidden" x-ref="tooltip"><%= @tooltip %></label>
  <% end %>
  <div><%== content if content %></div>
<% end %>