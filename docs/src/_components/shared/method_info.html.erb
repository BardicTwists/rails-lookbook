<%= tag.div **html_attrs do %>
  <div class="not-prose">
    <h3 id="method-<%= name.gsub("_", "-") %>" class="font-bold text-lg text-indigo-600 mb-4">
        <%= title %>
    </h3>
  </div>   
  <div class="prose space-y-6">
    <% if purpose %>
      <div>
        <%= markdownify purpose %>
      </div>
    <% end %>
    <div>
      <% if display_signature %>
        <div class="method-signature">
          <%= markdownify signature %>
        </div>
      <% end %>
      <% if options_list %>
        <%= options_list %>
      <% end %>
    </div>
    <% if description %>
      <div>
        <%= markdownify description %>
      </div>
    <% end %>
    <% if example %>
      <div>
        <%= markdownify example %>
      </div>
    <% end %>
  </div>
<% end %>