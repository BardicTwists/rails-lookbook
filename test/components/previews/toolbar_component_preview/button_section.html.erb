<%= render Lookbook::Toolbar::Component.new do |toolbar| %>
  <% toolbar.section do %>
    Button section on the right &rarr;
  <% end %>

  <% toolbar.section align: :right, divide: :left, padded: false do %>
    <%= render Lookbook::ButtonGroup::Component.new do |group| %>
      <% group.button icon: :eye, tooltip: "Show preview" %>
      <% group.button icon: :refresh_cw, disabled: true %>
      <% group.button icon: :check_circle %>
    <% end %>
  <% end %>
<% end %>