<style>
  .lookbook-preview {

  }

  .lookbook-preview--list .lookbook-preview-scenario {
    margin-bottom: 30px;
  }

  .lookbook-preview--grid {
    display: grid;
    grid-template-columns: repeat(<%= params[:lookbook][:display][:cols] || '3' %>, minmax(0, 1fr));
    row-gap: 30px;
  }

  .lookbook-preview-label {
    color: #999;
    font-size: 14px;
    margin-top: 0;
    margin-bottom: 10px;
  }
</style>

<% if scenarios.many? %>
  <div class="lookbook-preview lookbook-preview--<%= params[:lookbook][:display][:layout] || "list" %>">
  <% scenarios.each do |scenario| %>
    <div class="lookbook-preview-scenario">
      <h6 class="lookbook-preview-label">
        <%= scenario.label %>
      </h6>
      <%= scenario.output %>
    </div>
  <% end %>
  </div>
<% else %>
  <%# Render a single scenario %>
  <%= scenarios.first.output %>
<% end %>